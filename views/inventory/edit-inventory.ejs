<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>


<% if (errors) { %>
  <ul class="notice">
<% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
<% }) %>    
  </ul>
<% } %>

  <%- messages() %>

  <form action="/inv/update" method="post" id="updateForm"><br>
  <p>Modifying new Item</p>  
  <%- classificationList %><br>
  <label for="inv_make">Make:</label><br>
  <input type="text" name="inv_make" id="inv_make" required  placeholder="Min of 3 characters" minlength="3" pattern=".{3,}" value="<%= locals.inv_make %>"><br>
  <label for="inv_model">Model:</label><br>
  <input type="text" name="inv_model" id="inv_model" required  placeholder="Min of 3 characters" minlength="3" pattern=".{3,}" value="<%= locals.inv_model %>"><br>
  <label for="inv_description"> Description:</label><br>
  <textarea id="inv_description" name="inv_description"  rows="6" cols="30" value="<%= locals.inv_description %>"></textarea><br>
  <label for= "inv_image">Imagen Path:</label><br>
  <input type="text" name="inv_image" id="inv_image" required value="<%= locals.inv_image %>"><br>
  <label for= "inv_thumbnail">Thumbnail Path:</label><br>
  <input type="text" name="inv_thumbnail" id="inv_thumbnail" required  value="<%= locals.inv_thumbnail %>"><br>
  <label for="inv_price"> Price:</label><br>
  <input type="text" id="inv_price" name="inv_price" required placeholder="Decimal or integer" pattern="^\d+([.,]\d+)?$" value="<%= inv_price %>"><br>
  <label for="inv_year"> Year:</label><br>
  <input type="text" id="inv_year" name="inv_year" required placeholder="Four digit " maxlength="4" minlength="4" pattern="^\d{4}$" value="<%= inv_year %>"><br>
  <label for="inv_miles"> Miles:</label><br>
  <input type="text" id="inv_miles" name="inv_miles" required placeholder="Digits only"  value="<%=inv_miles %>"><br>
  <label for="inv_color">Color:</label><br>
  <input type="text" name="inv_color" id="inv_color" required value="<%=inv_color %>"><br>
  <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
  <input type="submit" name="submit" value="Update Vehicle">
  </form>
  <script src="../../js/inv-update.js"></script>
  