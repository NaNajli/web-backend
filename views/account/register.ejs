<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- message %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    
    
<form class="form-register"  action="/account/register" method="post">

<label for="account_firstname">First Name:</label><br>  
<input type="text" id="account_firstname" name="account_firstname" required><br>
<label for="account_lastname">Last Name: </label><br>
<input type="text" id="account_lastname" name="account_lastname" required><br>
<label for="account_email"  class="email"> Email: </label><br>
<input type="text" id="account_email" name="account_email" autocomplete="username" placeholder="Enter a valid email address"><br>
<label for="account_password" class="password">Password:</label><br>
<input type="password" id="account_password" name="account_password"  autocomplete="current-password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
<span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span><br>
<input type="submit" id="submit" value="Submit">

</form>
